{
  "services": {
    "app": {
      "image": "c4illin/convertx:latest",
      "container_name": "{{APP_ID}}",
      "restart": "unless-stopped",
      "ports": {
        "8080": "{{APP_PORT}}"
      },
      "volumes": [
        {
          "source": "{{APP_DATA_DIR}}/config",
          "target": "/config"
        },
        {
          "source": "{{APP_DATA_DIR}}/downloads",
          "target": "/downloads"
        },
        {
          "source": "{{APP_DATA_DIR}}/uploads",
          "target": "/uploads"
        }
      ]
    }
  }
}